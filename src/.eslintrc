{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "prettier",
  ],
  "parser": "@typescript-eslint/parser",
  "settings": {
    "react": {
      "version": "detect",
    },
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
    },
  },
  "env": { "node": false, "browser": true },
  "rules": {
    "react/no-deprecated": "off", // выключили уведомление об устаревших функциях
    "no-console": "warn",
  },
}
